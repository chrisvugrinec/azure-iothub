{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
  "contentVersion": "1.1.0.0",
  "parameters": {
        "databaseAccounts_name": {
            "type": "String"
        },
        "iothub_name": {
            "type": "String"
        }
  },
  "variables": {
      "artifactsLocationURL": "https://raw.githubusercontent.com/chrisvugrinec/azure-iothub/master/azure-infra",
  },
  "resources": [
   {
      "apiVersion": "[variables('apiVersionDeployments')]",
      "name": "iot-azure-documentdb",
      "type": "Microsoft.DocumentDB/databaseAccounts",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('artifactsLocationURL'), '/documentdb.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "databaseAccounts_name": {"value": "[parameters('databaseAccounts_name')]"}
        }
      }
    },
    {
      "apiVersion": "[variables('apiVersionDeployments')]",
      "name": "iot-azure-iothub",
      "type": "Microsoft.Devices/IotHubs",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('artifactsLocationURL'), '/iothub.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "iothub_name": {"value": "[parameters('iothub_name')]"}
        }
      }
    }
  ]
}
