{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "IotHubs_chrixhub_name": {
            "defaultValue": "chrixhub",
            "type": "String"
        },
        "namespaces_chrixsb_name": {
            "defaultValue": "chrixsb",
            "type": "String"
        },
        "AuthorizationRules_RootManageSharedAccessKey_name": {
            "defaultValue": "chrixsb/RootManageSharedAccessKey",
            "type": "String"
        },
        "eventhubs_ehalerts_name": {
            "defaultValue": "chrixsb/ehalerts",
            "type": "String"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Devices/IotHubs",
            "sku": {
                "name": "S1",
                "tier": "Standard",
                "capacity": 1
            },
            "name": "[parameters('IotHubs_chrixhub_name')]",
            "apiVersion": "2016-02-03",
            "location": "North Europe",
            "tags": {
                "displayName": "IoTHub"
            },
            "properties": {
                "ipFilterRules": [],
                "eventHubEndpoints": {
                    "events": {
                        "retentionTimeInDays": 1,
                        "partitionCount": 4,
                        "partitionIds": [
                            "0",
                            "1",
                            "2",
                            "3"
                        ],
                        "path": "[parameters('IotHubs_chrixhub_name')]",
                        "endpoint": "[concat('sb://iothub-ns-', parameters('IotHubs_chrixhub_name'),'-132746-cb93e69044.servicebus.windows.net/')]"
                    },
                    "operationsMonitoringEvents": {
                        "retentionTimeInDays": 1,
                        "partitionCount": 4,
                        "partitionIds": [
                            "0",
                            "1",
                            "2",
                            "3"
                        ],
                        "path": "[concat(parameters('IotHubs_chrixhub_name'),'-operationmonitoring')]",
                        "endpoint": "[concat('sb://iothub-ns-', parameters('IotHubs_chrixhub_name'),'-132746-cb93e69044.servicebus.windows.net/')]"
                    }
                },
                "routing": {
                    "endpoints": {
                        "serviceBusQueues": [],
                        "serviceBusTopics": [],
                        "eventHubs": []
                    },
                    "routes": [],
                    "fallbackRoute": {
                        "name": "$fallback",
                        "source": "DeviceMessages",
                        "condition": "true",
                        "endpointNames": [
                            "events"
                        ],
                        "isEnabled": true
                    }
                },
                "storageEndpoints": {
                    "$default": {
                        "sasTtlAsIso8601": "PT1H",
                        "connectionString": "",
                        "containerName": ""
                    }
                },
                "enableFileUploadNotifications": false,
                "cloudToDevice": {
                    "maxDeliveryCount": 10,
                    "defaultTtlAsIso8601": "PT1H",
                    "feedback": {
                        "lockDurationAsIso8601": "PT1M",
                        "ttlAsIso8601": "PT1H",
                        "maxDeliveryCount": 10
                    }
                },
                "operationsMonitoringProperties": {
                    "events": {
                        "None": "None",
                        "Connections": "None",
                        "DeviceTelemetry": "None",
                        "C2DCommands": "None",
                        "DeviceIdentityOperations": "None",
                        "FileUploadOperations": "None",
                        "Routes": "None"
                    }
                },
                "features": "None"
            },
            "dependsOn": []
        },
        {
            "type": "Microsoft.Eventhub/namespaces",
            "sku": {
                "name": "Standard",
                "tier": "Standard",
                "capacity": 1
            },
            "kind": "EventHub",
            "name": "[parameters('namespaces_chrixsb_name')]",
            "apiVersion": "2015-08-01",
            "location": "North Europe",
            "tags": {
                "displayName": "Service Bus"
            },
            "properties": {
                "provisioningState": "Succeeded",
                "status": "Active",
                "createdAt": "2017-03-23T08:19:49.707Z",
                "serviceBusEndpoint": "[concat('https://', parameters('namespaces_chrixsb_name'),'.servicebus.windows.net:443/')]",
                "enabled": true,
                "updatedAt": "2017-03-23T08:20:15.377Z"
            },
            "dependsOn": []
        },
        {
            "type": "Microsoft.Eventhub/namespaces/AuthorizationRules",
            "name": "[parameters('AuthorizationRules_RootManageSharedAccessKey_name')]",
            "apiVersion": "2015-08-01",
            "properties": {
                "rights": [
                    "Listen",
                    "Manage",
                    "Send"
                ]
            },
            "dependsOn": [
                "[resourceId('Microsoft.Eventhub/namespaces', parameters('namespaces_chrixsb_name'))]"
            ]
        },
        {
            "type": "Microsoft.Eventhub/namespaces/eventhubs",
            "name": "[parameters('eventhubs_ehalerts_name')]",
            "apiVersion": "2015-08-01",
            "location": "North Europe",
            "properties": {
                "messageRetentionInDays": 1,
                "status": "Active",
                "createdAt": "2017-03-23T08:20:31.657",
                "updatedAt": "2017-03-23T08:20:39.91",
                "partitionCount": 4,
                "partitionIds": [
                    "0",
                    "1",
                    "2",
                    "3"
                ]
            },
            "dependsOn": [
                "[resourceId('Microsoft.Eventhub/namespaces', parameters('namespaces_chrixsb_name'))]"
            ]
        },
        {
            "type": "Microsoft.Eventhub/namespaces/eventhubs/consumergroups",
            "name": "[parameters('eventhubs_ehalerts_name')]",
            "apiVersion": "2015-08-01",
            "location": "North Europe",
            "properties": {
                "createdAt": "2017-03-23T08:20:37.4410123",
                "updatedAt": "2017-03-23T08:20:37.4410123"
            },
            "dependsOn": [
                "[resourceId('Microsoft.Eventhub/namespaces', parameters('namespaces_chrixsb_name'))]",
                "[resourceId('Microsoft.Eventhub/namespaces/eventhubs', parameters('eventhubs_ehalerts_name'))]"
            ]
        }
    ]
}