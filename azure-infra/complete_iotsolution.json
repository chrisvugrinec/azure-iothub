{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
  "contentVersion": "1.1.0.0",
  "parameters": {
        "databaseAccountsName": {
            "type": "String"
        },
        "iothubName": {
            "type": "String"
        },
        "sbusName": {
            "type": "String"
        },
       "streamanalyticsJobname": {
            "type": "String"
        }
  },
  "variables": {
      "artifactsLocationURL": "https://raw.githubusercontent.com/chrisvugrinec/azure-iothub/master/azure-infra",
  },
  "resources": [
   {
      "name": "iot-azure-documentdb",
      "type": "Microsoft.DocumentDB/databaseAccounts",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('artifactsLocationURL'), '/documentdb.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "databaseAccounts_name": {"value": "[parameters('databaseAccountsName')]"}
        }
      }
    },
    {
      "name": "iot-azure-iothub",
      "type": "Microsoft.Devices/IotHubs",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('artifactsLocationURL'), '/iothub.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "iothub_name": {"value": "[parameters('iothubName')]"}
        }
      }
    },
    {
      "name": "iot-azure-servicebus",
      "type": "Microsoft.ServiceBus/namespaces",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('artifactsLocationURL'), '/sbus.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "sbus_name": {"value": "[parameters('sbusName')]"}
        }
      }
    },
    {
      "name": "iot-azure-streamanalytics",
      "type": "Microsoft.StreamAnalytics/StreamingJobs",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('artifactsLocationURL'), '/stream_analytics.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "streamAnalyticsJobName": {"value": "[parameters('streamanalyticsJobname')]"}
        }
      }
    }
  ]
}
